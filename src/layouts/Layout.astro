---
interface Props {
    title: string;
    unlockFlag: boolean;
}

const { title, unlockFlag } = Astro.props;

import Nav from "../ui/Nav.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <title>{title}</title>

        <!-------------------- Addons -------------------->

        <!-- Google Fonts  -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="bg-midnight text-white min-w-screen min-h-screen scrollbar-thin scrollbar-thumb-mid-blue scrollbar-rounded">
        <div class="max-w-7xl mx-auto px-5 sm:px-10">
            <Nav unlockFlag={unlockFlag} />
            <slot />
        </div>
    </body>
</html>
